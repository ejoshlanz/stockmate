<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/fx_rounded_background"
    android:orientation="horizontal"
    android:padding="15dp">

    <!-- ImageView for Item Picture -->
    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Item Picture" />

    <!-- Inner LinearLayout for text and actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <!-- Title and Action Buttons (Edit/Delete) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/normal"
                android:textStyle="bold" />

            <!-- Edit and Delete Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_edit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:contentDescription="Edit Icon"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/alt" />

                <ImageView
                    android:id="@+id/iv_item_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Delete Icon"
                    android:src="@drawable/ic_bin"
                    app:tint="@color/alt" />
            </LinearLayout>
        </LinearLayout>

        <!-- Category Text -->
        <TextView
            android:id="@+id/tv_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normal" />

        <!-- Stock and Price Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Stock Info Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock:"
                    android:textColor="@color/normal" />

                <TextView
                    android:id="@+id/tv_item_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Price Info Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/normal" />

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
